{
  "name": "@irsb-watchtower/watchtower-api",
  "version": "0.3.0",
  "private": true,
  "description": "HTTP API for IRSB Watchtower: agent risk, alerts, receipt ingest, transparency log",
  "type": "module",
  "main": "./dist/server.js",
  "exports": {
    ".": {
      "import": "./dist/server.js",
      "types": "./dist/server.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@irsb-watchtower/watchtower-core": "workspace:*",
    "fastify": "^5.7.4"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "@types/node": "^20.11.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "vitest": "^1.2.0"
  }
}
