{
  "name": "@irsb-watchtower/api",
  "version": "0.1.0",
  "private": true,
  "description": "HTTP API server for IRSB Watchtower",
  "type": "module",
  "main": "./dist/server.js",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@irsb-watchtower/config": "workspace:*",
    "@irsb-watchtower/core": "workspace:*",
    "@irsb-watchtower/chain": "workspace:*",
    "@irsb-watchtower/irsb-adapter": "workspace:*",
    "@irsb-watchtower/signers": "workspace:*",
    "fastify": "^4.26.0",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "vitest": "^1.2.0"
  }
}
