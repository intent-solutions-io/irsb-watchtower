{
  "name": "@irsb-watchtower/cli",
  "version": "0.3.0",
  "type": "module",
  "description": "CLI utilities for IRSB Watchtower",
  "bin": {
    "irsb-watchtower": "./dist/cli.js"
  },
  "scripts": {
